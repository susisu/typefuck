{
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "src",
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
